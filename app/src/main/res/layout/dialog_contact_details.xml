<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:padding="30dp">

    <ImageView
        android:id="@+id/contactImage"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:contentDescription="Contact Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contactName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/wanted_sans_std_bold"
        android:textColor="#000000"
        android:textSize="29sp"
        android:textStyle="bold"
        android:layout_margin="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactImage" />

    <TextView
        android:id="@+id/recommendedMenuLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천메뉴"
        android:fontFamily="@font/wanted_sans_std_bold"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/contactName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/recommendedMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_margin="4dp"
        android:fontFamily="@font/wanted_sans_std_regular"
        app:layout_constraintTop_toBottomOf="@id/recommendedMenuLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
